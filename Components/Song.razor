@using Library.Services
@using Library.Data
@inject MyDbContext DbContext

<div class="song">
    <div class="song-row">
        <img src="..\\Albums\\@Cover" />
        <div class="song-column">
            <div class="song-row">
                <div class="title">@Title</div>
                <div class="duration">@Duration</div>
            </div>
            <div class="artist">@Artist</div>
            <div class="song-row">
                <div class="album">@Album</div>
                <div class="artist">(@Year)</div>
            </div>
        </div>
    </div>
    <div class="song-row">
        <div class="rating">@Rating</div>
        <div class="artist"> of </div>
        <div class="out-of">10</div>
    </div>
</div>

@code {
    [Parameter] public int Id { get; set; }
    [Parameter] public string? Title { get; set; }
    [Parameter] public string? Album { get; set; }
    [Parameter] public string? Artist { get; set; }
    [Parameter] public int Year { get; set; }
    [Parameter] public int Rating { get; set; }
    [Parameter] public string? Duration { get; set; }
    [Parameter] public string? Cover { get; set; }
}
